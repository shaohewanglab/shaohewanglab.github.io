number = {14},
pages = {3702--3716.e30},
pmid = {34133940},
publisher = {Elsevier Inc.},
title = {{Budding epithelial morphogenesis driven by cell-matrix versus cell-cell adhesion}},
url = {https://doi.org/10.1016/j.cell.2021.05.015},
