pages = {396--409},
pmid = {27020753},
publisher = {Elsevier Inc.},
title = {{A Small RNA-Catalytic Argonaute Pathway Tunes Germline Transcript Levels to Ensure Embryonic Divisions}},
url = {https://doi.org/10.1016/j.cell.2016.02.040},
volume = {165},
year = {2016}
